<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_nature_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/playerCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/recommendCard"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:backgroundTint="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fifacard"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="40dp">

        <!-- Rating & Position -->
        <LinearLayout
            android:id="@+id/ratingSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/playerRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="96"
                android:visibility="gone"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#FFD700" />

            <TextView
                android:id="@+id/playerPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ST"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFD700" />

        </LinearLayout>

        <!-- Player Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="43dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/playerAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/catpuccino"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <!-- Player Name -->
        <TextView
            android:id="@+id/playerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerAvatar"
            android:layout_marginTop="8dp"
            android:text="HAALAND"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:gravity="center" />

        <!-- Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerName"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="96 STP"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/cardioPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="96 SLP"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/endurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80 BP"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700" />

            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/vitality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88 HR"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/discipline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 CAL"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/recovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="94 WGT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700" />

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/recommendCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/primary_green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯"
                android:textSize="32sp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Recommendation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help your teammate improve"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <Button
                android:id="@+id/recommendActivityButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="ðŸš€ Send"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/white"
                android:textColor="@color/primary_green"
                app:cornerRadius="24dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>