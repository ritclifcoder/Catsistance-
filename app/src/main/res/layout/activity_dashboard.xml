<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_green"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="ðŸ± Health Dashboard"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_nature_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Health Cards Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Blood Pressure Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="#FFEBEE">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â¤ï¸"
                                    android:textSize="28sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Blood Pressure"
                                    android:textSize="12sp"
                                    android:textColor="#C62828"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>

                                <TextView
                                    android:id="@+id/bloodPressureValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="120/80"
                                    android:textSize="16sp"
                                    android:textColor="#C62828"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Walking Steps Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="#E3F2FD">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸš¶"
                                    android:textSize="28sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Steps Today"
                                    android:textSize="12sp"
                                    android:textColor="#1976D2"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:id="@+id/stepsValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8,542"
                                    android:textSize="16sp"
                                    android:textColor="#1976D2"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Second Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Sleep Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="#F3E5F5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ˜´"
                                    android:textSize="28sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sleep"
                                    android:textSize="12sp"
                                    android:textColor="#7B1FA2"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:id="@+id/sleepValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7h 30m"
                                    android:textSize="16sp"
                                    android:textColor="#7B1FA2"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Water Consumption Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="8dp"
                            android:backgroundTint="#E0F2F1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’§"
                                    android:textSize="28sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Water Intake"
                                    android:textSize="12sp"
                                    android:textColor="#00695C"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:id="@+id/waterIntakeValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.8L"
                                    android:textSize="16sp"
                                    android:textColor="#00695C"
                                    android:textStyle="bold"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/neon_pink"
                    android:layout_marginVertical="24dp" />

                <!-- Second Half - Future Content Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                            android:id="@+id/pollytest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Features Coming Soon"
                        android:textSize="16sp"
                        android:textColor="@color/dark_green"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Welcome Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back! Let's check your health today."
            android:textSize="16sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp" />

        <!-- Cat Assistant Section -->
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/primary_green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/catpuccino"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/catamazonqchatter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hi! I'm your health assistant. How can I help you today?"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>