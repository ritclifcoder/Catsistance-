<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Rank Badge -->
            <TextView
                android:id="@+id/rankBadge"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/primary_green"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="2dp" />

            <!-- Profile Photo -->
            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop" />

            <!-- User Name -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="John Doe"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Group Badge -->
            <TextView
                android:id="@+id/groupBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥‡"
                android:textSize="22sp"
                android:layout_marginEnd="6dp"/>

            <!-- Health Points Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ethereumIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/etherum"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/healthPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="850"
                        android:textSize="22sp"
                        android:textColor="@color/neon_pink"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="points"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/cryptoEquivalent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00850 ETH"
                    android:textSize="11sp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:alpha="0.2"
            android:layout_marginVertical="10dp" />

        <!-- Health Metrics Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Steps -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps: "
                    android:textSize="13sp"
                    android:textColor="@color/cyber_purple"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stepsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.5K"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Sleep -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep: "
                    android:textSize="13sp"
                    android:textColor="@color/cyber_violet"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sleepText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8h"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Vitals Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <!-- Blood Pressure -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BP: "
                    android:textSize="13sp"
                    android:textColor="@color/neon_pink"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="118/78"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Heart Rate -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HR: "
                    android:textSize="13sp"
                    android:textColor="@color/neon_magenta"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hrText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68 bpm"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
