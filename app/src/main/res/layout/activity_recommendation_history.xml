<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_green"
        android:elevation="4dp"
        app:title="ðŸ“œ Recommendation History"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/white" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¤ My Recommendations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#E8F5E9"
            android:layout_marginTop="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:minHeight="100dp" />

        <TextView
            android:id="@+id/sentEmptyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No recommendations sent yet"
            android:textSize="14sp"
            android:textColor="#999"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¥ Received Recommendations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/receivedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:minHeight="100dp" />

        <TextView
            android:id="@+id/receivedEmptyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No recommendations received yet"
            android:textSize="14sp"
            android:textColor="#999"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>

</LinearLayout>
