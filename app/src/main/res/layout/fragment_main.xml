<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_nature_bg">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/catAssistantCard"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Health Cards Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Blood Pressure Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:backgroundTint="@color/neon_pink">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Pressure"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:id="@+id/bloodPressureValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120/80"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Walking Steps Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:backgroundTint="@color/cyber_purple">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_directions"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Steps Today"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/stepsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8,542"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Sleep Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:backgroundTint="@color/cyber_violet">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_lock_power_off"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/sleepValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7h 30m"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Water Consumption Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:backgroundTint="@color/neon_magenta">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_rotate"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/weightValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70.0 kg"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Cat Assistant Section - Fixed at Bottom -->
    <androidx.cardview.widget.CardView
        android:id="@+id/catAssistantCard"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/primary_green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/catpuccino"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/catamazonqchatter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hi! I'm your health assistant. How can I help you today?"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>