{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId",
        "totalPoints": {
          ".write": "auth != null && auth.uid == $userId"
        },
        "recommendationsLeft": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "groups": {
      "$groupId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "recommendations": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$recommendationId": {
        ".read": "auth != null && (data.child('from').val() == auth.uid || data.child('to').val() == auth.uid)",
        ".write": "auth != null && newData.child('from').val() == auth.uid"
      }
    }
  }
}
